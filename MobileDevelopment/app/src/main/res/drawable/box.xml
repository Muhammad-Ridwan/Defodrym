<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/textbtn" /> <!-- Set the desired background color -->

    <stroke
        android:width="2dp"
        android:color="@color/textc"/> <!-- Set the color and width of the stroke -->

    <corners
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp" /> <!-- Set the desired corner radius -->

    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />

</shape>
